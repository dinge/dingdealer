<% form_for @local_concept do |form| %>
  <% field_set_with_control_for @local_concept do %>

    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :text %>
    <%= form.text_area :text %>
    
    <%= submit_button %>

  <% end %>
<% end %>

<% if @local_concept.is_a?(Local::Concept) %>
  <%= @local_concept.tags.map(&:name) %>
<% end %>  