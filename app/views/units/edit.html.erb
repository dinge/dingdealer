<% form_for :unit, @unit, :url => concept_unit_path, :html => {:method => :put} do |form| %>

  <%= quick_form_fields_for form, 
        :except => [:type, :_plan] %>

  <%= form.select :type, 
         Unit::Plan::Base.available_plans.map(&:human_name), 
         { :selected => @unit.plan.class.human_name },
         :disabled => true %>
  
  <%= form.submit %>
<% end %>
